@model IEnumerable<AgileFood.Models.PessoaJuridicas>

@{
    ViewBag.Title = "Cadastro Pessoa Juridica";
}

<br />

<p>
    @Html.ActionLink("Novo", "Create", null, new { @class="btn btn-primary btn-sm"})
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayName("Tipo Pessoa")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ativo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayName("Endereço")
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.PessoaJuridicasId)
        </th>*@
        <th>
            @Html.DisplayName("Nome Fantasia")
        </th>
        <th>
            @Html.DisplayName("Razão Social")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CNPJ)
        </th>
        <th>
            @Html.DisplayName("Inscricao Estadual")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PessoaTipo.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ativo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Endereco)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.PessoaJuridicasId)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Nomes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RazaoSocial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CNPJ)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InscricaoEstadual)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.PessoasId }, new { @class = "btn btn-warning btn-sm" }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.PessoasId }, new { @class = "btn btn-info btn-sm" }) |
            @Html.ActionLink("Deletar", "Delete", new { id=item.PessoasId }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
