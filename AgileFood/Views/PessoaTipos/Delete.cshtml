@model AgileFood.Models.PessoaTipos

@{
    ViewBag.Title = "Deletar Tipo Pessoa";
}

<br />

<h3>Deseja deletar o Tipo Pessoa: @Html.DisplayName(Model.Descricao)?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Descrição")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-danger btn-sm" /> |
            @Html.ActionLink("Voltar lista", "Index", null, new { @class="btn btn-success btn-sm"})
        </div>
    }
</div>
