@model AgileFood.Models.Funcionarios

@{
    ViewBag.Title = "Editar Funcionário";
}

<br />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FuncionariosId)

        <div class="form-group">
            @Html.LabelFor(model => model.PessoasId, "Nome", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("PessoasId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.PessoasId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Salvar" class="btn btn-primary btn-sm" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar lista", "Index",null, new { @class="btn btn-success btn-sm"})
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
